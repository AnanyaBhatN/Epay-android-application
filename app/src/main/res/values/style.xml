<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Input Label Style (already present) -->
    <style name="InputLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style for Money Management buttons -->
    <style name="MoneyManagementButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <!-- Style for Disabled buttons -->
    <style name="MoneyManagementButtonDisabled" parent="MoneyManagementButton">
        <item name="android:alpha">0.5</item>
    </style>

    <!-- Style for icons within the buttons -->
    <style name="MoneyManagementIcon">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:tint">#3B82F6</item>
    </style>

    <!-- Style for text within the buttons -->
    <style name="MoneyManagementText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#4A5568</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="KeypadButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="PinDot">
        <item name="android:layout_width">16dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:background">@drawable/bg_pin_dot</item>
        <item name="android:layout_margin">6dp</item>
    </style>

    <style name="DashboardQuickActionButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="DashboardQuickActionIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:tint">@color/colorPrimaryBlue</item>
    </style>

    <style name="DashboardQuickActionText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DashboardListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="DashboardListItemDisabled" parent="DashboardListItem">
        <item name="android:alpha">0.6</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="DashboardListItemIcon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:tint">@color/colorTextSecondary</item>
    </style>

    <style name="DashboardListItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDivider</item>
        <item name="android:layout_marginStart">56dp</item>
    </style>
</resources>
