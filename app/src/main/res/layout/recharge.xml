<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:fitsSystemWindows="true"
    tools:context=".Recharge">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/recharge_rounded_card"
        android:elevation="6dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Back button" />


        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Mobile Recharge"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/btn_home"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/baseline_home"
            android:contentDescription="Home Button"
            android:layout_margin="8dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

    <!-- Content card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/contentCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="22dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter mobile No."
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingBottom="8dp"/>

            <EditText
                android:id="@+id/editTextMobile"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:inputType="phone"
                android:background="@drawable/recharge_rounded_card"
                android:padding="10dp"
                android:hint="e.g., 98XXXXXXXX"
                android:maxLength="10"
                android:textSize="16sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile operators"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:paddingTop="14dp"
                android:paddingBottom="8dp"/>

            <!-- Operator grid -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:useDefaultMargins="true">

                <!-- Airtel -->
                <LinearLayout
                    android:id="@+id/opAirtel"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/recharge_operator_tile">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/airtel_logo"
                        android:contentDescription="Airtel"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="airtel"
                        android:textColor="@color/text_gray"/>
                </LinearLayout>

                <!-- Jio -->
                <LinearLayout
                    android:id="@+id/opJio"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/recharge_operator_tile">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/jio_logo"
                        android:contentDescription="jio"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jio"
                        android:textColor="@color/text_gray"/>
                </LinearLayout>

                <!-- Vi -->
                <LinearLayout
                    android:id="@+id/opVi"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/recharge_operator_tile">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/vi_logo"
                        android:contentDescription="vi"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vi"
                        android:textColor="@color/text_gray"/>
                </LinearLayout>

                <!-- BSNL -->
                <LinearLayout
                    android:id="@+id/opBsnl"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:background="@drawable/recharge_operator_tile">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/bsnl_logo"
                        android:contentDescription="bsnl"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BSNL"
                        android:textColor="@color/text_gray"/>
                </LinearLayout>

            </GridLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Proceed button -->
    <Button
        android:id="@+id/btnProceedToPlan"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:text="Choose Plan"
        android:backgroundTint="@color/primary_blue"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/contentCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.95"/>

</androidx.constraintlayout.widget.ConstraintLayout>
