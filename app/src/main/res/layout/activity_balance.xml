<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    tools:context=".BalanceActivity">

    <!-- Header Card -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:padding="16dp">

        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:tint="#1a202c"
            android:contentDescription="Back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Balance"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1a202c"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:tint="#1a202c"
            android:contentDescription="Home"/>

    </RelativeLayout>

    <!-- Balance Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/header"
        android:layout_marginTop="32dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:background="@drawable/balance_car_background">

        <TextView
            android:id="@+id/textViewBalanceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Account Balance"
            android:textSize="20sp"
            android:textColor="#4A5568"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/textViewBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹1,250.00"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#2D3748"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:id="@+id/textViewDateInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your balance is up to date."
            android:textSize="14sp"
            android:textColor="#718096"/>

    </LinearLayout>

</RelativeLayout>

