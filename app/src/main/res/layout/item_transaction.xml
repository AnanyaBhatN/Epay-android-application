<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="18dp"
    app:cardUseCompatPadding="true"
    app:strokeWidth="0dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/containerItem"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- HEADER ROW -->
        <LinearLayout
            android:id="@+id/headerRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <!-- Round icon -->
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_circle_neutral">

                <ImageView
                    android:id="@+id/ivType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_arrow_right_t" />
            </FrameLayout>

            <!-- Title + date -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Received from Ashwram"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date: 15/04/23"
                    android:textSize="12sp"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- Amount + chevron -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹500"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/red_600"
                    android:paddingEnd="8dp"/>

                <ImageView
                    android:id="@+id/ivChevron"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:rotation="0"
                    android:src="@drawable/ic_chevron_down"/>
            </LinearLayout>
        </LinearLayout>

        <!-- EXPANDABLE SECTION -->
        <LinearLayout
            android:id="@+id/expandArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="12dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider" />

            <TextView
                android:id="@+id/tvDetailsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction Details"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/tvDetailId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction id: 1"
                android:textColor="@color/text_primary"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/tvDetailType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type: Received"
                android:textColor="@color/text_primary"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvDetailFromTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From: Ashwram"
                android:textColor="@color/text_primary"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvDetailAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount: +₹500"
                android:textColor="@color/text_primary"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvDetailDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date and time: 15/04/23, 10:30 AM"
                android:textColor="@color/text_primary"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvDetailStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Successful"
                android:textColor="@color/text_primary"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvDetailMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Payment method: UPI"
                android:textColor="@color/text_primary"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
