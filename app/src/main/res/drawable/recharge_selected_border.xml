<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Transparent background so it blends nicely -->
    <solid android:color="@android:color/transparent"/>

    <!-- Blue border for selection -->
    <stroke
        android:width="3dp"
        android:color="@color/primary_blue"/>

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Padding to avoid overlap with parent card -->
    <padding
        android:left="6dp"
        android:top="6dp"
        android:right="6dp"
        android:bottom="6dp"/>
</shape>
